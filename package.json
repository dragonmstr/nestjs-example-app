{
  "name": "nestjs-example-app",
  "version": "0.0.1",
  "description": "A sample nest js project for self training purpose",
  "author": "Marat Sadykov",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/main.js\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --runInBand --verbose",
    "test:cov": "jest --coverage",
    "precommit": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/testing": "^6.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.1",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "mongoose": "^5.9.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.1.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.16.1",
    "@types/faker": "^4.1.9",
    "@types/hapi__joi": "^16.0.1",
    "@types/jest": "24.0.11",
    "@types/mongoose": "^5.7.1",
    "@types/node": "^13.7.0",
    "@types/supertest": "2.0.7",
    "jest": "24.7.1",
    "mongodb-memory-server": "^6.2.4",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
